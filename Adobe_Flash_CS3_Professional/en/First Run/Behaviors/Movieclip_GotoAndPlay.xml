<flash_behavior version="1.0">
	<behavior_definition
		dialogID="Goto_and_Play-dialog"
		category="Movieclip"
		name="Goto and Play at frame or label">
		<properties>
			<property id="target" default="this"/>
			<property id="frame" default="1"/>
		</properties>
	
		<!--The dialog window is tied to the controls below by its id-->
		<!--This controls generate the dialog using the XML to UI functionality-->
		
		<dialog id="Goto_and_Play-dialog" title="Goto and Play at frame or label" buttons="accept, cancel">
		  <grid>
		    <columns>
			  <column>
				<rows>
				  <row align="center">
				    <vbox>
					  <label value="Choose the movie clip that you want to begin playing:               "/>			
					  <targetlist id="target" tabindex="1" class="movieclip"/>
					</vbox>
				  </row>
				</rows>
			 	<rows>
				  <row align="center">
				    <vbox>
						<label value=""/>
						<label value="Enter the frame number or frame label at which the movie clip should start"/>
						<label value="playing.  To start from the beginning, type '1':"/>
					</vbox>
				  </row>
				</rows>
			 	<rows>
				  <row align="center">
				    <vbox>
						<textbox literal="true" id="frame" tabindex="2" required="true"/>
					</vbox>
				  </row>
				</rows>
			  </column>
		    </columns>	
		  </grid>
		</dialog>
		<actionscript>
<![CDATA[
	//Movieclip GotoAndPlay Behavior
	$target$.gotoAndPlay($frame$);
	//End Behavior
]]>
		</actionscript>
	</behavior_definition>
</flash_behavior>