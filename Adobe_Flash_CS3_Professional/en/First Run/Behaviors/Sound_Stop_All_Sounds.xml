<flash_behavior version="1.0">

<!--Below is where and how we define the behavior and its parameters-->

	<behavior_definition
		dialogID="Stop_All_Sounds-dialog"
		category="Sound"
		name="Stop All Sounds">
		<!--class="frame, movieclip, button">-->
		
		<properties>
			<property id="dummy"/>
		</properties>
	
		<!--The dialog window is tied to the controls below by its id-->
		<!--This controls generate the dialog using the XML to UI functionality-->
		
		<dialog id="Stop_All_Sounds-dialog" title="Stop All Sounds" buttons="accept, cancel">
			<vbox>
				<hbox>
					<label value="This behavior stops all sounds currently playing."/>
				</hbox>
			</vbox>  
		</dialog>
		<actionscript>
		
		<!-- Inside the CDATA section is where you place the Actionscript to be displayed in the AS panel-->
		
<![CDATA[
	//stopAllSounds Behavior
	stopAllSounds();
]]>
		</actionscript>
	</behavior_definition>
</flash_behavior>