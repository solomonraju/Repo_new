<?xml version="1.0" encoding="utf-8"?>
<?xul-overlay href="../../../XULControls/DateControls.xml"?>

<customactions>
	<actionspanelsupplement>
		<string name="UTC" object="Date" text="Date.UTC(% year, [month], [date], [hour], [min], [sec], [ms] %)">
			<parametersdialog>
				<block id="YEAR_FLEX"/>
				<block id="MONTH_OPT_FLEX"/>
				<block id="DAY_OPT_FLEX"/>
				<block id="HOURS_OPT_FLEX"/>
				<block id="MINUTES_OPT_FLEX"/>
				<block id="SECONDS_OPT_FLEX"/>
				<block id="MILLISECONDS_OPT_FLEX"/>
			</parametersdialog>
		</string>
		<string name="setTime" object="Date" text=".setTime(% value %)">
			<parametersdialog>
				<label id="MILLISECONDS_LABEL"/>
				<textbox id="MILLISECONDS_TEXTBOX" size="15" prompt="since 1/1/1970"/>
			</parametersdialog>
		</string>
		<string name="setHours" object="Date" text=".setHours(% hours%)">
			<parametersdialog>
				<block id="HOURS"/>
			</parametersdialog>
		</string>
		<string name="setDate" object="Date" text=".setDate(% date %)">
			<parametersdialog>
				<block id="DAY"/>
			</parametersdialog>
		</string>
		<string name="setMonth" object="Date" text=".setMonth(% month %)">
			<parametersdialog>
				<block id="MONTH"/>
			</parametersdialog>
		</string>
		<string name="setFullYear" object="Date" text=".setFullYear(% year, month, date %)">
			<parametersdialog>
				<block id="YEAR"/>
				<block id="MONTH_OPT"/>
				<block id="DAY_OPT"/>
			</parametersdialog>
		</string>
		<string name="setSeconds" object="Date" text=".setSeconds(% seconds %)">
			<parametersdialog>
				<block id="SECONDS"/>
			</parametersdialog>
		</string>
		<string name="setMinutes" object="Date" text=".setMinutes(% minutes %)">
			<parametersdialog>
				<block id="MINUTES"/>
			</parametersdialog>
		</string>
		<string name="setMilliseconds" object="Date" text=".setMilliseconds(% ms %)">
			<parametersdialog>
				<label id="MILLISECONDS_LABEL"/>
				<textbox id="MILLISECONDS_TEXTBOX" prompt="0-999"/>
			</parametersdialog>
		</string>
		<string name="setYear" object="Date" text=".setYear(% year %)">
			<parametersdialog>
				<block id="YEAR"/>
			</parametersdialog>
		</string>
		<string name="setUTCDate" object="Date" text=".setUTCDate(% date %)">
			<parametersdialog>
				<block id="DAY"/>
			</parametersdialog>
		</string>
		<string name="setUTCMonth" object="Date" text=".setUTCMonth(% month, date %)" text2=".setUTCMonth(% month %)">
			<parametersdialog>
				<block id="MONTH"/>
			</parametersdialog>
		</string>
		<string name="setUTCFullYear" object="Date" text=".setUTCFullYear(% year, month, date %)">
			<parametersdialog>
				<block id="YEAR"/>
				<block id="MONTH_OPT"/>
				<block id="DAY_OPT"/>
			</parametersdialog>
		</string>
		<string name="setUTCHours" object="Date" text=".setUTCHours(% hours %)">
			<parametersdialog>
				<block id="HOURS"/>
			</parametersdialog>
		</string>
		<string name="setUTCMinutes" object="Date" text=".setUTCMinutes(% minutes %)">
			<parametersdialog>
				<block id="MINUTES"/>
			</parametersdialog>
		</string>
		<string name="setUTCSeconds" object="Date" text=".setUTCSeconds(% seconds %)">
			<parametersdialog>
				<block id="SECONDS"/>
			</parametersdialog>
		</string>
		<string name="setUTCMilliseconds" object="Date" text=".setUTCMilliseconds(% ms %)">
			<parametersdialog>
				<label id="MILLISECONDS_LABEL"/>
				<textbox id="MILLISECONDS_TEXTBOX" prompt="0-999"/>
			</parametersdialog>
		</string>
	</actionspanelsupplement>
</customactions>