<?xml version="1.0"?>
<flash_formatter version="1.0">
	<formatter_definition dialogID="Dialog" category="Basic Types" name ="Date" >
		<properties>
			<property id="format" default="MM/DD/YYYY HH:NN:SS"/>
		</properties>
		<dialog id="Dialog" title="Date Formatter Settings" buttons="accept, cancel">
			<grid>		
				<columns>
					<column/>
					<column/>
				</columns>
	
				<row>
					<label value="Format: " control="format"/>
					<textbox id="format" width="65"/>
				</row>
			</grid>	
		</dialog>
		<actionscript class="mx.data.formatters.Dte"/>
	</formatter_definition>
</flash_formatter>
